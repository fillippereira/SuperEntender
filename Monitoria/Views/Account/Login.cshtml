@model Monitoria.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Monitoria - Efetuar Login";
}
<title>@ViewBag.Title - Monitoria</title>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/estilo.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.0.0.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/main.js?version=12"></script>
<body>
    <div class="container-login100">
        <div class="wrap-login100">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post,
                new { @class = "login100-form validate-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <span class="login100-form-title p-b-48 p-0">
                    <img src="~/Images/icon.png" class="img-fluid" style="width:80%" />
                </span>

                <div class="wrap-input100 m-b-23">
                    @Html.TextBoxFor(m => m.Login, new { @class = "input100" })
                    <span class="focus-input100-login" data-placeholder="Login"></span>

                </div>
                @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })

                <div class="wrap-input100 m-b-23">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    @Html.PasswordFor(m => m.Senha, new { @class = "input100" })
                    <span class="focus-input100-senha" data-placeholder="Senha"></span>


                </div>
                @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })

               @* <div class="wrap text-left">
                    @Html.CheckBoxFor(m => m.LembrarMe)
                    @Html.LabelFor(m => m.LembrarMe)
                </div>*@


                <div class="container-login100-form-btn p-b-31">

                    <button class="btn btn-outline-secondary w-100">
                        Login
                    </button>

                </div>
                <div class="text-center p-b-25">
                    @Html.ActionLink("Esqueceu sua senha?", "ForgotPassword", "", new { @class = "text-primary" })
                </div>
                
                <div class="text-center p-t-50">
                    <span class="text-muted d-block">
                        Não possui uma conta?
                    </span>

                    @Html.ActionLink("Registre-se", "Register", "", new { @class = "text-primary" })
                </div>
            }
        </div>
    </div>

</body>